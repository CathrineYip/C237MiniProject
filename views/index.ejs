<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Parentica!</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
        }
        .sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            background-color: #f8f9fa;
            padding: 15px;
            border-right: 1px solid #dee2e6;
        }
        .sidebar input {
            margin-bottom: 15px;
            width: 100%;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 4px;
        }
        .sidebar nav a {
            display: block;
            margin-bottom: 10px;
            color: #343a40;
            text-decoration: none;
        }
        .sidebar nav a:hover {
            background-color: #e9ecef;
            border-radius: 4px;
            padding-left: 10px;
        }
        .main-content {
            margin-left: 250px;
            flex: 1;
            padding: 20px;
        }
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .notifications {
            display: flex;
            align-items: center;
        }
        .notifications .bell {
            font-size: 1.5rem;
            margin-right: 10px;
        }
        .tabs {
         display: flex;
         border-bottom: 2px solid rgb(0, 110, 255);
        }

        .label1 {
          font-size: x-large;
          cursor: pointer;
          background-color: white;
          margin-right: 5px;
          transition: background-color 0.3s ease, color 0.3s ease;
        }

        .label1:hover {
          background-color: #e9ecefb5; 
        }
       h2 {
            font-family: 'Georgia', sans-serif;
            font-size: 2.5rem;
            color: #002fff;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            margin: 20px 0;
            padding-bottom: 10px;
            border-bottom: 2px solid #008cff;
            text-transform: capitalize;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <input type="text" placeholder="Search...">
        <nav>
            <a href="/">Home</a>
            <a href="/addReviewsForm">Add a review</a>
        </nav>
    </div>
    <div class="main-content">
        <header>
            <button class="toggle-sidebar-btn">â˜°</button>
            <h2>What's new today?</h2>
        </header>
        <div class="label1">
            <button>Posts</button>
        </div>
        <div class="posts">
            <% reviews.forEach(function(reviews) { %>
                <div class="post">
                    <div class="post-content">
                        <h3><%= reviews.username %></h3>
                        <p><%= reviews.description %></p>
                        <% if (reviews.image) { %>
                            <p><img src="/images/<%= reviews.image %>" width="100px"></p>
                        <% } %>
                      
                        <div class="actions">
                            <a href="/editReview/<%= reviews.reviewID %>" method="POST" class="btn btn-primary btn-sm">Edit</a>
                            <form action="/deleteReview/<%= reviews.reviewID %>" method="GET" class="d-inline" onclick="return confirm('Confirm deletion?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% if (reviews.comments && reviews.comments.length > 0) { %>
                        <h5>Comments</h5>
                        <ul class="list-group">
                            <% reviews.comments.forEach(function(comments) { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <%= comments.description %> 
                                    <div>
                                        <form action="/edit/<%= comments.commentsID %>"method="POST" class="d-inline">
                                            <div class="input-group">
                                                <input type="text" class="form-control form-control-sm" name="description" placeholder="Edit comment">
                                                <button type="submit" class="btn btn-sm btn-warning">Edit</button>
                                            </div>
                                        </form>
                                        <form action="/delete/<%= comments.commentsID %>" method="GET" class="d-inline" onsubmit="return confirm('Are you sure you want to delete?');">
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p>No comments yet.</p>
                    <% } %>
                    <form action="/comments" method="POST" class="mt-3">
                        <input type="hidden" name="reviewID" value="<%= reviews.reviewID%>">
                        <div class="mb-3">
                            <textarea class="form-control" name="description" placeholder="Add a comment..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Post Comment</button>
                    </form>
                </div>
            <% }); %>
        </div>  
    </div>

    <script>
        document.querySelector('.toggle-sidebar-btn').addEventListener('click',function(){
            document.querySelector('.sidebar').classList.toggle('d-none');
        });
    </script>
</body>
</html>

